# ............................................style....
<MyButton@Button>:
    text: "SEND"
    color:1,1,1,1
    background_color:0,1,1,1
    size_hint_max:12,19 
    size_hint_max_y: 23
<MyLabel@MDLabel>
    text:"developer"
    md_bg_color: [1,0,0,1]
    halign:"center"
    color:0,0,1,1   
<MYCard@MDCard>
    
    spacing: '10dp'
    orientation: 'horizontal'
    # padding: "8dp"
    size_hint: None,None
    size: '88dp','180dp' 
    md_bg_color:0,0,3,1 
    pos: '10dp','400dp'

<MYImage@Image>:
    source: "img/mo.png"
    # size_hint:120,120
    pos:'70dp','700dp'
    pos_hint: {'center_x':.5,'center_y':.55}
<MyLabel@Label>:
    text: "DEVELOPER"
    color:9,0,0,15
    bold:True
    font_name: 'font/COOPBL.TTF'
    font_size: 18
# <MyBoxLayout@MDBoxLayout>:
#     md_bg_color:1,11,0,1
<MYImage@Image>:
    source: "img/mo.png"
    pos_hint: {'center_x': .2,'center_y': .50}
<MyBoxLayout@BoxLayout>:
    padding:"8dp"
    orientation: 'vertical'
    spacing:10 
<MYGridLayout@GridLayout>:
    rows:3
<MyTextInput@TextInput>:
    size_hint_max_y:55
  
    
# ...........................................add widget..............
GridLayout:
    
    MYCard:
        padding:22
        size: '280dp','280dp'
        md_bg_color:0,3,11,11
        rows:5
        orientation: 'vertical'
        pos:9,150
        MyLabel:
            text:"username"
        MyTextInput:
            id:text_input_one
        MyLabel:
            text:"password"
        MyTextInput:
            id:text_input_tow
        MyButton:
            on_press:app.information(self)  
    MyLabel:
        id:texts_color_change_one
        pos:103,33
        text:"Welcom"
        font_size:15
    MyLabel:
        id:texts_color_change_tow
        pos:103,13
        text:"Please Enter user and pass"
        font_size:15
    MyButton: 
        on_press:app.see(self)  

    MyLabel:
        id:count
        pos:10,-17
        text:"0"
        font_size:15
    


























